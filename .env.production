# 统一生产环境配置 - 前端部分
# 与后端 manager/meet-manager/.env 保持一致

# 后端API服务器地址
NEXT_PUBLIC_API_BASE_URL=https://meet.pge006.com/admin

# LiveKit服务器配置 - 必须使用NEXT_PUBLIC_前缀才能在客户端访问
NEXT_PUBLIC_LIVEKIT_URL=wss://meet.pge006.com
NEXT_PUBLIC_LIVEKIT_API_KEY=devkey
NEXT_PUBLIC_LIVEKIT_API_SECRET=developmentSecretKeyFor32Chars2024

# 生产环境特有配置
NEXT_PUBLIC_SHOW_SETTINGS_MENU=false
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_ENV=production

# 应用配置
NEXT_PUBLIC_APP_NAME=LiveKit Meet
NEXT_PUBLIC_APP_DESCRIPTION=基于 LiveKit 的视频会议系统

# 功能开关
NEXT_PUBLIC_ENABLE_RECORDING=true
NEXT_PUBLIC_ENABLE_SCREEN_SHARE=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_WHITEBOARD=false

# 会议配置
NEXT_PUBLIC_MAX_PARTICIPANTS=50
NEXT_PUBLIC_DEFAULT_VIDEO_QUALITY=high
NEXT_PUBLIC_ENABLE_NOISE_CANCELLATION=true

# 调试配置
NEXT_PUBLIC_LOG_LEVEL=info

# 注意：
# 1. 所有硬编码已提取到配置文件
# 2. 前后端配置保持一致
# 3. 生产环境关闭调试功能
# 4. NEXT_PUBLIC_前缀是Next.js客户端环境变量的要求 